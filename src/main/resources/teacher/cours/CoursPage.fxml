           <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="320.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="320.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <fx:include fx:id="lessonTab" source="list/CoursItem.fxml" />
            <fx:include fx:id="lessonTab1" source="list/CoursItem.fxml" GridPane.rowIndex="1" />
         </children>
      </GridPane>

   </children>
</VBox>
